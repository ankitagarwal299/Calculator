<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ankit.calculator.advancedCalculation"
    android:background="@android:color/black">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="30dp"

        android:id="@+id/LinearLayout"
        android:background="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/enterDigit"
            android:layout_marginLeft="150dp" />


    </LinearLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="sine"
            android:id="@+id/buttonSine"
            android:layout_row="0"
            android:layout_column="0"
            android:fontFamily="50" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="cos"
            android:id="@+id/buttonCos"
            android:layout_row="0"
            android:layout_column="1"
            android:fontFamily="50" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="tan"
            android:id="@+id/buttonTan"
            android:layout_row="0"
            android:layout_column="2"
            android:fontFamily="50" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="x\u00B3"
            android:id="@+id/buttonImag"
            android:layout_row="0"
            android:layout_column="3"
            android:fontFamily="50" />


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="ln"
            android:id="@+id/buttonNaturalLog"
            android:layout_row="1"
            android:layout_column="0"
            android:fontFamily="50" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="log"
            android:id="@+id/buttonLogBase2"
            android:layout_row="1"
            android:layout_column="1"
            android:fontFamily="50" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="\u03c0"
            android:id="@+id/buttonPI"
            android:layout_row="1"
            android:layout_column="2"
             />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="e"
            android:id="@+id/buttonExponent"
            android:layout_row="1"
            android:layout_column="3"
            android:fontFamily="50" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="%"
            android:id="@+id/buttonPercnt"
            android:layout_row="2"
            android:layout_column="0"
            android:fontFamily="50" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="!"
            android:id="@+id/buttonFact"
            android:layout_row="2"
            android:layout_column="1"
            android:fontFamily="50" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="\u221a"
            android:id="@+id/buttonSQRT"
            android:layout_row="2"
            android:layout_column="2"
            android:fontFamily="50" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="x\u00B2"
            android:id="@+id/buttonPower"
            android:layout_row="2"
            android:layout_column="3"
            android:fontFamily="50" />

    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="200dp"
        android:layout_below="@+id/LinearLayout"
        android:layout_marginRight="0dp">


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="DEL"
            android:id="@+id/buttonDEL"
            android:fontFamily="50"
            android:layout_marginLeft="40dp" />

    </LinearLayout>


</RelativeLayout>
